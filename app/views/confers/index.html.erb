<p id="notice"><%= notice %></p>

<h1>Confers</h1>

<%= link_to 'New Confer', new_confer_path %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Time</th>
      <th>Location</th>
      <th>Country</th>
      <th>Subject</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @confers.each do |confer| %>
      <tr>
        <td><%= link_to confer.name, confer %></td>
        <td><%= confer.start_time.strftime("%Y %B %d") %> - <%= confer.end_time.strftime("%B %d") %></td>
        <td><%= confer.location %></td>
        <td><%= confer.country.name %></td>
        <td><%= confer.subject.name %></td>
        <td><%= link_to 'Edit', edit_confer_path(confer) %></td>
        <td><%= link_to 'Destroy', confer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
